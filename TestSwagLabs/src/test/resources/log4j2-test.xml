<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
	<properties>
		<property name="filename">
			C:/Users/abanti/eclipse-workspace/TestSwagLabs/src/test/resources/logs</property>
	</properties>
	<Appenders>
		<RollingFile name="RollingFile"
			fileName="${filename}/log-${date:yyyy-MM-dd}.log"
			filePattern="${filename}/${date:yyyy-MM}/log-%d{MM-dd-yyyy}.log">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} -
					%msg%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="5MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="testcases" level="info" additivity="false">
			<AppenderRef ref="RollingFile" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="RollingFile" />
		</Root>
	</Loggers>
</Configuration>